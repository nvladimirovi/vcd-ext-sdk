{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "baseUrl": "./src",
    "stripInternal": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": []
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "http-transfer-service.js",
    "flatModuleId": "@vcd/http-transfer-service"
  },
  "files": [
    "./src/index.ts"
  ]
}